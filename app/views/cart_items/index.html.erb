<h3>カートの中身</h3>
<ul> 
  <% @items.each do |item| %>
    <li>
      <%= link_to product_path(item.product.id), method: :get  do %>
        <%= attachment_image_tag item.product, :image, :fill, 300, 300 %><br>
        <p>商品名：<%= item.product.name %></p>
      <% end %>
      <%= form_with(model: item, url: cart_item_path(item.id), method: :patch, local:true) do |f| %>
        <%= f.select :quantity, options_for_select(1..10, {selected: item.quantity} ) %>
        <%= f.submit "数量の変更" %>
      <% end %>
      <p>個数：<%= item.quantity %></p>
      <p>小計（<%= item.quantity %>個の商品）&yen<%= total_price(add_tax(item.product.price), item.quantity) %></p>
      <%= button_to "削除", cart_item_path(item.id), method: :delete %>
    </li> 
  <% end %>
</ul>
<h2>合計金額：&yen<%= add_tax(@total_price).to_s(:delimited) %></h2>
